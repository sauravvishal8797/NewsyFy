<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCardBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cardview_layout_margin"
        android:layout_marginLeft="@dimen/cardview_layout_margin"
        android:layout_marginRight="@dimen/cardview_layout_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/news_item_layout_marginbottom_height">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/news_cover_image_height"
                android:id="@+id/article_cover_image"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/colorText"
                android:text="Hey there this is the svhsjsjs, India vs Aurtralia"
                android:textStyle="normal"
                android:textSize="@dimen/article_title_text"
                android:layout_below="@id/article_cover_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article_source"
                android:layout_below="@id/article_title"
                android:text=""
                android:textColor="@color/colorText"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/article_source_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article_publish_time"
                android:layout_below="@id/article_title"
                android:layout_toRightOf="@id/article_source"
                android:text=""
                android:textColor="@color/colorText"
                android:layout_marginTop="0dp"
                android:textSize="@dimen/article_source_text_size"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
